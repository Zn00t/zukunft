<h1>Adminbereich</h1>
<div class="accordion" id="accordion-users-rooms">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        User Management
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion-users-rooms">
      <div class="accordion-body">
        <div class="row">
          <div class="col">
            <h5>aktivierte User:</h5>
            <div class="list-group">
              <% @active_users.each do |u| %>
                <div class="list-group-item">
                  <div class="row">
                    <div class="col">
                      <%= u.name %>
                    </div>
                    <div class="col">
                      <%= form_for admincorner_path do |f| %>
                        <%= f.hidden_field :method, value: :deactivate %>
                        <%= f.hidden_field :id, value: u.id %>
                        <%= f.submit "Deaktivieren", class: "btn btn-info" %>
                      <% end %>
                    </div>
                    <div class="col">
                      <%= render partial: "shared/reset_password_modal", locals: { user: u } %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col">
            <h5>deaktivierte User:</h5>
            <div class="list-group">
              <% @inactive_users.each do |user| %>
                <% if !user.deleted %>
                  <div class="list-group-item">
                    <div class="row">
                      <div class="col">
                        <%= user.name %>
                      </div>
                      <div class="col">
                        <%= form_for admincorner_path do |f| %>
                          <%= f.hidden_field :method, value: :activate %>
                          <%= f.hidden_field :id, value: user.id %>
                          <%= f.submit "Aktivieren", class: "btn btn-info" %>
                        <% end %>
                      </div>
                      <div class="col">
                        <%= render partial: "shared/delete_prompt_modal", locals: { user: user, username: user.name } %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <h5>User hinzuf체gen:</h5>
        <p>Jeder User hat das Standardpasswort "zukunft". Das Passwort kann jederzeit ge채ndert werden.</p>
        <%= form_for admincorner_path do |f| %>
          <%= f.hidden_field :method, value: :add_user %>
          <div class="row add-user-row">
            <div class="col">
              <%= f.label "Name:" %>
              <%= f.text_field :name, class: "add-user-field" %>
            </div>
            <div class="col">
              <%= f.submit "Hinzuf체gen", class: "btn btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingThree">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
        User Details
      </button>
    </h2>
    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordion-users-rooms">
      <div class="accordion-body">
        <h4>User Management</h4>
        <div class="list-group permissions">
          <div class="list-group-item">
            <div class="row">
              <div class="col">
                Name
              </div>
              <div class="col">
                <div class="row">
                  <div class="col user-management-header">
                    Putzdienst ausgenommen
                  </div>
                  <div class="col user-management-header">
                    Admin
                  </div>
                  <div class="col">

                  </div>
                </div>
              </div>
            </div>
          </div>
          <% @users.each do |user| %>
            <% unless user.deleted %>
              <div class="list-group-item">
                <div class="row">
                  <div class="col">
                    <%= user.name %>
                  </div>
                  <div class="col">
                    <%= form_for admincorner_path do |f| %>
                      <%= f.hidden_field :method, value: :admin_checkbox %>
                      <%= f.hidden_field :id, value: user.id %>
                      <div class="row">
                        <div class="col checkbox-container">
                          <%= f.check_box :excepted, class: "admin-checkbox", checked: user.excepted %>
                        </div>
                        <div class="col checkbox-container">
                          <%= f.check_box :admin, class: "admin-checkbox", checked: user.admin %>
                        </div>
                        <div class="col">
                          <%= f.submit "Update", class: "btn btn-info" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
        R채ume
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordion-users-rooms">
      <div class="accordion-body">
        TODO
      </div>
    </div>
  </div>
</div>