<div class="d-flex align-items-center justify-content-center">
  <h1>Finanzen der Zukunft</h1>
</div>

<%= form_with do |values| %>
  <div class="row input_row">
    <div class="col">
      <%= values.label :Wochenrate %><br>
      <%= values.text_field :rate %>
    </div>
    <div class="col">
      <%= values.label :Essenskasse %><br>
      <%= values.text_field :food %>
    </div>
    <div class="col">
      <%= values.label :Investitionskasse %><br>
      <%= values.text_field :invest %>
    </div>
    <div class="col">
      <%= values.label :Putzkasse %><br>
      <%= values.text_field :cleaning %>
    </div>
    <div class="col align-self-center">
      <%= values.submit class: "btn btn-outline-info" %>
    </div>
  </div>
<% end %>