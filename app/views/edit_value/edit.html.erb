<div class="d-flex align-items-center justify-content-center">
  <h1><%= t('headline') %></h1>
</div>

<div class="container">
  <%= form_with method: :patch do |values| %>
    <div class="row input_row">
      <div class="col">
        <%= values.hidden_field :user_id %>
        <%= hidden_field_tag :user_id, params[:id] %>
        <%= values.label t('rate').to_sym %><br>
        <%= values.text_field :rate, value: User.find(params[:id]).rate, class: "inputField" %>
      </div>
      <div class="col">
        <%= values.label t('food').to_sym %><br>
        <%= values.text_field :food, value: User.find(params[:id]).food, class: "inputField" %>
      </div>
      <div class="col">
        <%= values.label t('invest').to_sym %><br>
        <%= values.text_field :invest, value: User.find(params[:id]).invest, class: "inputField" %>
      </div>
      <div class="col">
        <%= values.label t('cleaning').to_sym %><br>
        <%= values.text_field :cleaning, value: User.find(params[:id]).cleaning, class: "inputField" %>
      </div>
      <div class="col">
        <%= values.label t('cleaned?').to_sym %><br>
        <%= values.check_box :cleaned, checked: User.find(params[:id]).cleaned, class: "input-checkbox" %>
      </div>
      <div class="col align-self-center">
        <%= values.submit t('save'), class: "btn btn-info finance-edit-button" %>
      </div>
    </div>
  <% end %>
</div>
