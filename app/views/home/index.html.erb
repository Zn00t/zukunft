<div class="d-flex align-items-center justify-content-center">
  <h1>Finanzen der Zukunft</h1>
</div>

<div class="container">
  <% if Current.user.present? %>
    <table class="table table-bordered table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Gesamt</th>
        <th>Wochenrate</th>
        <th>Betrag Essenskasse</th>
        <th>Betrag Investitionskasse</th>
        <th>Betrag Putzkasse</th>
      </tr>
      </thead>
      <% @value.each do |user| %>
        <tr>
          <th><%= user.name %></th>
          <td><%= user.sum %></td>
          <td><%= user.rate %></td>
          <td><%= user.food %></td>
          <td><%= user.invest %></td>
          <td><%= user.cleaning %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
