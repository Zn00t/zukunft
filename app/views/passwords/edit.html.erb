<div class="container">
  <h1><%= t('changePassword') %></h1>


  <%= form_with model: Current.user, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <div class="container">
      <div class="mb-3">
        <%= form.label :password, t('newPassword') %>
        <%= form.password_field :password, class: "form-control", placeholder: t('password') %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, t('confirmPassword') %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: t('confirmPassword') %>
      </div>

      <div class="mb-3">
        <%= form.submit t('changePassword'), class: "btn btn-primary" %>
      </div>
  <% end %>
  </div>
</div>