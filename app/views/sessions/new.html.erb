<div class="container">
  <h1>Log In</h1>

  <%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="mb-3">
      <%= form.label t("password") %>
      <%= form.password_field :password, class: "form-control", placeholder: t("password") %>
    </div>

    <div class="mb-3">
      <%= form.submit t("login"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>