<table class="table table-bordered table-hover table-striped table-responsible table-overview">
  <thead>
  <tr>
    <th>Name</th>
    <th>Gesamt</th>
    <th>Wochenrate</th>
    <th>Betrag Essenskasse</th>
    <th>Betrag Investitionskasse</th>
    <th>Betrag Putzkasse</th>
    <th>Geputzt?</th>
    <% if FinanceValue.where.not(:away => nil).present? %>
      <th>Weg bis zum</th>
    <% end %>
    <th></th>
    <% if Current.user.admin %>
      <th></th>
    <% end %>
  </tr>
  </thead>
  <% @value.each do |value| %>
    <%= render partial: "shared/table_item", object: value %>
  <% end %>
  <tr>
    <th>Gesamt</th>
    <td></td><td></td>
    <td>
      <%= number_with_precision(@value.map(&:food).sum, precision: 2, strip_insignificant_zeros: true) %>
    </td>
    <td>
      <%= number_with_precision(@value.map(&:invest).sum, precision: 2, strip_insignificant_zeros: true) %>
    </td>
    <td>
      <%= number_with_precision(@value.map(&:cleaning).sum, precision: 2, strip_insignificant_zeros: true) %>
    </td>
    <td></td><td></td>
  </tr>
</table>
