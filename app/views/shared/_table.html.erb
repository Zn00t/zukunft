<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Gesamt</th>
    <th>Wochenrate</th>
    <th>Betrag Essenskasse</th>
    <th>Betrag Investitionskasse</th>
    <th>Betrag Putzkasse</th>
  </tr>
  </thead>
  <% @value.each do |value| %>
    <% if value.name == Current.user.name %>
      <%= content_tag :tr, id: dom_id(value) do %>

        <th><%= value.name %></th>
        <% if value.sum >= 100 %>
          <td class="table-danger"><%= value.sum %></td>
        <% elsif value.sum <= -100 %>
          <td class="table-success"><%= value.sum %></td>
        <% else %>
          <td><%= value.sum %></td>
        <% end %>
        <td><%= value.rate %></td>
        <td><%= value.food %></td>
        <td><%= value.invest %></td>
        <td><%= value.cleaning %></td>
        <td class="table-borderless">
          <%= button_to "eigene Daten Ã¤ndern", password_reset_path, class: "btn btn-outline-info" %>
        </td>
      <% end %>
    <% else %>
      <tr>
        <th><%= value.name %></th>
        <% if value.sum >= 100 %>
          <td class="table-danger"><%= value.sum %></td>
        <% elsif value.sum <= -100 %>
          <td class="table-success"><%= value.sum %></td>
        <% else %>
          <td><%= value.sum %></td>
        <% end %>
        <td><%= value.rate %></td>
        <td><%= value.food %></td>
        <td><%= value.invest %></td>
        <td><%= value.cleaning %></td>
        <td class="table-borderless">
          <button type="button" class="btn btn-outline-secondary">Umschichtung vorschlagen</button>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>